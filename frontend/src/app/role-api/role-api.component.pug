.api.row(*ngIf="userService.loggedIn")
  .list
    button.btn.btn-outline-info.my-2.my-sm-0((click)="getAllFromUser(userService.loggedInUser['_id'])") List roles
  .adddNew
    button.btn.btn-outline-primary.my-2.my-sm-0(data-toggle="modal", data-target="#addRole" ) Add Role

  #addRole.modal.fade(tabindex="-1", role="dialog", aria-labelledby="addRoleTitle", aria-hidden="true")
    .modal-dialog.modal-dialog-centered(role="document")
      .modal-content
        .modal-header
          h5#loginModalLongTitle.modal-title New Role         
          button.close(type="button", data-dismiss="modal", aria-label="Close")
            span(aria-hidden="true") &times;       
        .modal-body
          .card(style='width: 18rem;')
            .card-body
              h5.card-title
                input.form-control(type='text', name='title', placeholder='Role Title' ,[(ngModel)]="newRole.title")             
              p.card-text
                textarea.form-control(name='description',placeholder="Role description" ,[(ngModel)]="newRole.description")           
            ul.list-group.list-group-flush
              li.list-group-item
                input.form-control(type='text', name='time', placeholder='Time, date' ,[(ngModel)]="newRole.time")       
              li.list-group-item
                input.form-control(type='text', name='location', placeholder='Location' ,[(ngModel)]="newRole.location")
              li.list-group-item
                input.form-control(type='color', name='color', placeholder='#666' ,[(ngModel)]="newRole.color")
        .modal-footer
          button.btn.btn-secondary(type="button", data-dismiss="modal") Close          
          button.btn.btn-primary(type="button" ,(click)="create(userService.loggedInUser['_id'])") Create
.row
  .col-xs-12.col-md-4(*ngFor="let role of roles")
    .card(style='width: 18rem;')
      .card-body
        h5.card-title
          input.form-control(type='text', name='title' ,[(ngModel)]="role.title")             
        p.card-text
          textarea.form-control(name='description' ,[(ngModel)]="role.description")          
      ul.list-group.list-group-flush
        li.list-group-item
          input.form-control(type='text', name='time' ,[(ngModel)]="role.time")       
        li.list-group-item
          input.form-control(type='text', name='location' ,[(ngModel)]="role.location")
        li.list-group-item
          input.form-control(type='color', name='color' ,[(ngModel)]="role.color")
      .card-body.btn-group
        button.btn.btn-outline-info.my-2.my-sm-0(type="button" ,(click)="update(role)") Update
        button.btn.btn-outline-danger.my-2.my-sm-0(type="button" ,(click)="delete(userService.loggedInUser['_id'], role['_id'])") Delete
